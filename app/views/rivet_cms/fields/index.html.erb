<% content_for :breadcrumb do %>
  <nav class="mb-4" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <%= link_to dashboard_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-home mr-2">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9 22 9 12 15 12 15 22"/>
          </svg>
          Dashboard
        <% end %>
      </li>
      <li>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right mx-1 text-gray-400">
            <path d="m9 18 6-6-6-6"/>
          </svg>
          <%= link_to "Content Types", content_types_path, class: "ml-1 text-sm font-medium text-gray-700 hover:text-gray-900 md:ml-2 dark:text-gray-400 dark:hover:text-white" %>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right mx-1 text-gray-400">
            <path d="m9 18 6-6-6-6"/>
          </svg>
          <%= link_to @content_type.name, content_type_path(@content_type), class: "ml-1 text-sm font-medium text-gray-700 hover:text-gray-900 md:ml-2 dark:text-gray-400 dark:hover:text-white" %>
        </div>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right mx-1 text-gray-400">
            <path d="m9 18 6-6-6-6"/>
          </svg>
          <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">Structure</span>
        </div>
      </li>
    </ol>
  </nav>
<% end %>

<div class="mb-6">
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">Structure: <%= @content_type.name %></h1>
        <span class="ml-3 inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= @content_type.is_single ? 'bg-amber-100 text-amber-800 border border-amber-200 dark:bg-amber-900/30 dark:text-amber-300 dark:border-amber-800' : 'bg-teal-100 text-teal-800 border border-teal-200 dark:bg-teal-900/30 dark:text-teal-300 dark:border-teal-800' %>">
          <%= @content_type.is_single ? "Single Type" : "Collection" %>
        </span>
      </div>
      <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">
        Define the structure of your content type by adding and arranging fields.
      </p>
    </div>
    <div class="flex space-x-3">
      <%= link_to new_content_type_field_path(@content_type), class: "inline-flex items-center rounded-md border border-transparent bg-brand-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-brand-700 focus:outline-none transition-all duration-200" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus mr-2 -ml-1">
          <path d="M5 12h14"/>
          <path d="M12 5v14"/>
        </svg>
        Add Field
      <% end %>
    </div>
  </div>
</div>

<div class="bg-white dark:bg-neutral-800 rounded-lg border border-gray-200 dark:border-neutral-700">
  <div class="px-6 py-5 border-b border-gray-200 dark:border-neutral-700">
    <div class="flex justify-between items-center">
      <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Fields</h2>
    </div>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
      Drag and drop to reorder fields. Click on a field to edit its properties.
      <span class="block mt-1">To stack half-width fields, drag the second field slightly lower than the first. To place them side by side, make sure they're at the same vertical position.</span>
    </p>
  </div>

  <% if @fields.any? %>
    <div id="sortable-fields" 
        data-controller="field-layout"
        data-field-layout-target="fieldContainer"
        data-field-layout-content-type-id-value="<%= @content_type.to_param %>"
        data-update-positions-path="<%= update_positions_content_type_fields_path(@content_type) %>"
        data-content-type-id="<%= @content_type.to_param %>"
        class="p-6 grid gap-3">
      <% @fields.order(:position).each do |field| %>
        <div class="field-item"
            data-field-layout-target="field"
            data-field-id="<%= field.to_param %>"
            data-width="<%= field.width || 'full' %>"
            data-row-group="<%= field.row_group || field.position %>"
            data-position="<%= field.position %>"
            data-update-width-path="<%= update_width_content_type_field_path(@content_type, field) %>">
          <div class="flex items-center justify-between h-12 rounded-lg p-3 transition-colors duration-150">
            <div class="flex items-center flex-1">
              <div class="cursor-move mr-3 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-grip-vertical">
                  <circle cx="9" cy="6" r="1"/><circle cx="9" cy="12" r="1"/><circle cx="9" cy="18" r="1"/>
                  <circle cx="15" cy="6" r="1"/><circle cx="15" cy="12" r="1"/><circle cx="15" cy="18" r="1"/>
                </svg>
              </div>
              <div class="min-w-0 flex-1">
                <h4 class="text-sm font-medium text-gray-900 dark:text-gray-100 truncate mb-1"><%= field.name %></h4>
                <div class="flex items-center">
                  <span class="inline-flex items-center rounded-full bg-gray-100 dark:bg-neutral-800 px-2 py-0.5 text-xs font-medium text-gray-800 dark:text-gray-300">
                    <%= field.field_type_name %>
                  </span>
                  <% if field.required %>
                    <span class="ml-2 inline-flex items-center rounded-full bg-red-100 text-red-800 border border-red-200 dark:bg-red-900/30 dark:text-red-300 dark:border-red-800 px-2 py-0.5 text-xs font-medium">
                      Required
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="flex items-center space-x-2">
              <button type="button" 
                      class="toggle-width-button text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 transition-colors duration-150 p-1 hover:bg-gray-200 dark:hover:bg-neutral-700 rounded-full" 
                      data-action="click->field-layout#toggleWidth">
                <span class="sr-only">Toggle width</span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
                  <% if field.width == 'full' %>
                    <path d="m15 15 6 6m-6-6v4.8m0-4.8h4.8"/><path d="M9 19.8V15m0 0H4.2M9 15l-6 6"/><path d="M15 9l6-6m-6 6V4.2m0 4.8h4.8"/><path d="M9 4.2V9m0 0H4.2M9 9 3 3"/>
                  <% else %>
                    <path d="m21 21-6-6m6 6v-4.8m0 4.8h-4.8"/><path d="M3 16.2V21m0 0h4.8M3 21l6-6"/><path d="M21 7.8V3m0 0h-4.8M21 3l-6 6"/><path d="M3 7.8V3m0 0h4.8M3 3l6 6"/>
                  <% end %>
                </svg>
              </button>
              <%= link_to edit_content_type_field_path(@content_type, field), class: "text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 transition-colors duration-150 p-1 hover:bg-gray-200 dark:hover:bg-neutral-700 rounded-full" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-pencil">
                  <path d="M17 3a2.85 2.85 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/>
                  <path d="m15 5 4 4"/>
                </svg>
              <% end %>
              <%= button_to content_type_field_path(@content_type, field), 
                  method: :delete, 
                  class: "text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors duration-150 p-1 hover:bg-red-100 dark:hover:bg-red-900/30 rounded-full", 
                  form_class: "flex items-center",
                  data: { confirm: "Are you sure you want to delete this field? This will also delete all associated data." } do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash-2">
                  <path d="M3 6h18"/>
                  <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                  <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                  <line x1="10" x2="10" y1="11" y2="17"/>
                  <line x1="14" x2="14" y1="11" y2="17"/>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 px-6">
      <div class="relative mx-auto h-24 w-24 text-gray-400 bg-gray-50 dark:bg-neutral-900 rounded-full border border-gray-100 dark:border-neutral-700 flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-database h-12 w-12">
          <ellipse cx="12" cy="5" rx="9" ry="3"/>
          <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/>
          <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>
        </svg>
        <div class="absolute -top-1 -right-1 h-6 w-6 bg-brand-100 dark:bg-brand-900/30 rounded-full border border-brand-200 dark:border-brand-800 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus h-4 w-4 text-brand-600 dark:text-brand-400">
            <path d="M5 12h14"/>
            <path d="M12 5v14"/>
          </svg>
        </div>
      </div>
      <h3 class="mt-4 text-sm font-medium text-gray-900 dark:text-gray-100">No fields</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new field.</p>
      <div class="mt-6">
        <%= link_to new_content_type_field_path(@content_type), class: "inline-flex items-center rounded-md border border-transparent bg-brand-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-brand-700 focus:outline-none transition-all duration-200" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus mr-2 -ml-1">
            <path d="M5 12h14"/>
            <path d="M12 5v14"/>
          </svg>
          Add Field
        <% end %>
      </div>
    </div>
  <% end %>
</div> 